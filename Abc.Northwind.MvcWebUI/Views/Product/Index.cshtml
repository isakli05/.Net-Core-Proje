@model Abc.Northwind.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<div>
    <table class="table table-responsive table-hover pt-3">
        <thead>
        <tr>
            <th>Ad</th>
            <th>Fiyat</th>
            <th>stok</th>
            <th>Kategory ID</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>@product.CategoryId</td>
                <td><a class="btn btn-success" asp-controller="Cart" asp-action="addToCart" 
                asp-route-productId="@product.ProductId">add to cart</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<product-list-pager
    current-category="@Model.CurrentCategory"
    current-page="@Model.CurrentPage"
    page-count="@Model.PageCount"
    page-size="@Model.PageSize">
</product-list-pager>